---
export interface Props {
	date: string;
  id: string;
	image: string;
	name: string;
}

const { date, id, image, name } = Astro.props;

function formatDate(date) {
	return new Date(date).toUTCString().replace(/(\d\d\d\d) .*/, '$1'); // remove everything after YYYY
}
---

 <div class="flex">
    <div
      class="flex items-center pb-8"
      itemprop="author"
      itemscope
      itemtype="http://schema.org/Person"
    >
      <div class="w-12">
        <img
          class="h-auto rounded-full w-full"
          format="webp"
          src={image}
          alt="Author image"
          itemprop="image"
        />
      </div>

      <div class="pl-2 pb-2">
        By

        <a href={`/authors/${id}`} itemprop="name">
          {name}
        </a>

        |
      </div>
    </div>

    <div class="flex items-center pb-8">
      <div class="pl-2 pb-2">
        <time datetime={date} itemprop="datePublished dateModified">
          {formatDate(date)}
        </time>
      </div>
    </div>
  </div>